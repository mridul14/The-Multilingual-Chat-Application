<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="trainedge.demotraining.activity.ChatActivity"
    >
    tools:context="trainedge.myapplication.activity.ChatActivity"
    <!-- A horizontal line between the chatbox and RecyclerView -->
    <LinearLayout android:id="@+id/layout_chatbox"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffffff"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <EditText android:id="@+id/et_chatbox"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:maxLines="6"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:hint="Enter message"/>

        <Button android:id="@+id/btn_chatbox_send"
            android:layout_height="48dp"
            android:layout_width="64dp"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:clickable="true"
            android:textSize="14dp"
            android:text="SEND"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView android:id="@+id/rv_message_list"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:defaultFocusHighlightEnabled="false"
        android:focusableInTouchMode="true"
        android:focusable="auto"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_chatbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"

        />
</android.support.constraint.ConstraintLayout>